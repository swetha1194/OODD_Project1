    <%= radio_button_tag(:search_option, "building", checked:true) %>
  <%= label_tag :search_option, "Building" ,class: "search" %>
    <%= radio_button_tag(:search_option, "size") %>
  <%= label_tag :search_option, "Size" ,class: "search" %>
  <%= submit_tag "Search", :name => nil ,class: "btn-sm btn-primary" %>
  </div>
<% end %>


