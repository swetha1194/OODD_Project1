<%if flash[:danger] %><div class="alert alert-danger"> <%= flash[:danger] %></div><%end%>
<%= form_for(:session, url: login_path) do |f| %>
<div class="container">  
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.label "Option" %>
    <p><%= f.radio_button :option, "member" , checked: true %>
    <%= f.label :option, "Member", :value => "member" %></p>
    <p><%= f.radio_button :option ,"admin" %>
    <%= f.label :option, "Admin", :value => "admin"  %></p>
  </div>
  <div class="form-group">
    <%= f.submit "Login", class: "btn btn-success"  %>
  </div>
</div>
<% end %>
